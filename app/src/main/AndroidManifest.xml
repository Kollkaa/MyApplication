<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.minigames">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:banner="@color/white"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:screenOrientation="landscape"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name="com.example.minigames.ChibiActivity"></activity>
        <activity android:name="com.example.minigames.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.minigames.SplashActivity"
            android:label="ater1312" />
        <activity
            android:name="com.example.minigames.GameActivity"
            android:label="Space War" />
        <activity
            android:name="com.example.minigames.HelpActivity"
            android:label="Підтримка" />
        <activity
            android:name="com.example.minigames.MenuActivity"
            android:label="Меню" />
        <activity
            android:name="com.example.minigames.ScoresActivity"
            android:label="Досягнення" />
        <activity
            android:name="com.example.minigames.SettingActivity"
            android:label="Налаштування" />
        <activity
            android:name="com.example.minigames.GameFirstExrActivity"
            android:label="Space War" />
    </application>

</manifest>